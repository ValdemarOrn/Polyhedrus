<ListBox x:Class="Leiftur.Ui.Components.MenuSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leiftur.Ui.Components"
             mc:Ignorable="d" 
             x:Name="Main"
             MouseUp="Main_MouseUp"
             d:DesignHeight="300" d:DesignWidth="300">
    <ListBox.Template>
        <ControlTemplate>
            <Border ClipToBounds="True">
                <Grid>
                    <Label Content="{Binding ElementName=Main, Path=SelectedItem}"
                           Width="{Binding ElementName=sizingControl, Path=ActualWidth}" />
                    <Rectangle Name="sizingControl" Visibility="Hidden" />
                </Grid>
            </Border>
        </ControlTemplate>
    </ListBox.Template>
    
    <ListBox.ContextMenu>
        <ContextMenu x:Name="contextMenu" Opened="ContextMenu_Opened">
        </ContextMenu>
    </ListBox.ContextMenu>
</ListBox>
