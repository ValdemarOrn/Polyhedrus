<UserControl x:Class="Leiftur.Ui.Components.SynthView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lpCore="clr-namespace:LowProfile.Core.Ui;assembly=LowProfile.Core"
             xmlns:components="clr-namespace:Leiftur.Ui.Components"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="1136">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <lpCore:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <lpCore:BoolToBoldConverter x:Key="BoolToBoldConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="15" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="10">
            <Grid Grid.Row="0" Grid.Column="1" Style="{StaticResource SectionTitle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MarkerButton}" Command="{Binding SetModuleVisibleCommand}" CommandParameter="Osc1" 
                        FontWeight="{Binding Osc1Visible, Converter={StaticResource BoolToBoldConverter}}" Width="50">Osc 1</Button>
                <Button Grid.Column="1" Style="{StaticResource MarkerButton}" Command="{Binding SetModuleVisibleCommand}" CommandParameter="Osc2"
                        FontWeight="{Binding Osc2Visible, Converter={StaticResource BoolToBoldConverter}}" Width="50">Osc 2</Button>
                <Button Grid.Column="2" Style="{StaticResource MarkerButton}" Command="{Binding SetModuleVisibleCommand}" CommandParameter="Osc3" 
                        FontWeight="{Binding Osc3Visible, Converter={StaticResource BoolToBoldConverter}}" Width="50">Osc 3</Button>
                <Rectangle Style="{StaticResource SectionLine}" />
            </Grid>

            <components:OscSection Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="245" Height="171" 
                              ModuleAddress="Osc1" Visibility="{Binding Osc1Visible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Visible}" />
            <components:OscSection Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="245" Height="171" 
                              ModuleAddress="Osc2" Visibility="{Binding Osc2Visible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}" />
            <components:OscSection Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="245" Height="171" 
                              ModuleAddress="Osc3" Visibility="{Binding Osc3Visible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}" />

            <Grid Grid.Row="2" Grid.Column="1" Style="{StaticResource SectionTitle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MarkerButton}">Mixer</Button>
                <Rectangle Style="{StaticResource SectionLine}" />
            </Grid>

            <components:MixerSection Grid.Row="3" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="245" Height="114" />

            <Grid Grid.Row="4" Grid.Column="1" Style="{StaticResource SectionTitle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MarkerButton}">Voices</Button>
                <Rectangle Style="{StaticResource SectionLine}" />
            </Grid>

            <components:VoicesSection Grid.Row="5" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="245" Height="114" />
        </StackPanel>
        
        <Grid Grid.Row="0" Grid.Column="3" Style="{StaticResource SectionTitle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource MarkerButton}">Character</Button>
            <Rectangle Style="{StaticResource SectionLine}" />
        </Grid>

        <components:CharacterSection Grid.Row="1" Grid.Column="3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="114" />

        <Grid Grid.Row="0" Grid.Column="5" Style="{StaticResource SectionTitle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource MarkerButton}">HP Filter</Button>
            <Rectangle Style="{StaticResource SectionLine}" />
        </Grid>

        <components:FilterHpSection Grid.Row="1" Grid.Column="5" VerticalAlignment="Top" HorizontalAlignment="Left" Width="98" Height="114" />
        
        <Grid Grid.Row="0" Grid.Column="7" Style="{StaticResource SectionTitle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Style="{StaticResource MarkerButton}">Filter</Button>
            <Rectangle Style="{StaticResource SectionLine}" />
        </Grid>

        <components:FilterMainSection Grid.Row="1" Grid.Column="7" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="114" />
        
        <StackPanel Grid.Row="0" Grid.Column="9" Grid.RowSpan="10">

            <Grid Grid.Row="0" Grid.Column="9" Style="{StaticResource SectionTitle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MarkerButton}">Envelopes</Button>
                <Rectangle Style="{StaticResource SectionLine}" />
            </Grid>

            <components:EnvelopeSection VerticalAlignment="Top" HorizontalAlignment="Left" Width="392" Height="57" ModuleAddress="EnvAmp" />
            <components:EnvelopeSection VerticalAlignment="Top" HorizontalAlignment="Left" Width="392" Height="57" ModuleAddress="EnvFilter" />
            <components:EnvelopeSection VerticalAlignment="Top" HorizontalAlignment="Left" Width="392" Height="57" ModuleAddress="EnvMod" />

            <Grid Grid.Row="2" Grid.Column="9" Style="{StaticResource SectionTitle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MarkerButton}" Command="{Binding SetModuleVisibleCommand}" CommandParameter="Lfo1" 
                        FontWeight="{Binding Lfo1Visible, Converter={StaticResource BoolToBoldConverter}}" Width="50">LFO 1</Button>
                <Button Grid.Column="1" Style="{StaticResource MarkerButton}" Command="{Binding SetModuleVisibleCommand}" CommandParameter="Lfo2"
                        FontWeight="{Binding Lfo2Visible, Converter={StaticResource BoolToBoldConverter}}" Width="50">LFO 2</Button>
                <Button Grid.Column="2" Style="{StaticResource MarkerButton}" Command="{Binding SetModuleVisibleCommand}" CommandParameter="Arpeggiator" 
                        FontWeight="{Binding ArpeggiatorVisible, Converter={StaticResource BoolToBoldConverter}}" Width="80">Arpeggiator</Button>

                <Rectangle Style="{StaticResource SectionLine}" />
            </Grid>
            
            <components:LfoSection VerticalAlignment="Top" HorizontalAlignment="Left" Width="392" Height="57" ModuleAddress="Lfo1"
                                   Visibility="{Binding Lfo1Visible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Visible}" />
            <components:LfoSection VerticalAlignment="Top" HorizontalAlignment="Left" Width="392" Height="57" ModuleAddress="Lfo2"
                                   Visibility="{Binding Lfo2Visible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}" />
            <components:ArpeggiatorSection VerticalAlignment="Top" HorizontalAlignment="Left" Width="392" Height="57"
                                           Visibility="{Binding ArpeggiatorVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}" />

            <Grid Grid.Row="4" Grid.Column="9" Style="{StaticResource SectionTitle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Style="{StaticResource MarkerButton}" Command="{Binding SetModuleVisibleCommand}" CommandParameter="Delay" 
                        FontWeight="{Binding DelayVisible, Converter={StaticResource BoolToBoldConverter}}" Width="50">Delay</Button>
                <Button Grid.Column="1" Style="{StaticResource MarkerButton}" Command="{Binding SetModuleVisibleCommand}" CommandParameter="Chorus"
                        FontWeight="{Binding ChorusVisible, Converter={StaticResource BoolToBoldConverter}}" Width="55">Chorus</Button>
                
                <Rectangle Style="{StaticResource SectionLine}" />
            </Grid>
            
            <components:DelaySection VerticalAlignment="Top" HorizontalAlignment="Left" Width="392" Height="114" 
                                     Visibility="{Binding DelayVisible, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Visible}" />

            <Label Style="{StaticResource FancyLabel}" Margin="5,15,5,5" FontSize="20">Amp Env Attack: 220 ms</Label>
            <Button Click="Button_Click">Go</Button>
        </StackPanel>


        <StackPanel Grid.Column="3" Grid.ColumnSpan="5" Grid.Row="1" Grid.RowSpan="2" Margin="0,125,0,0">
            <Label Style="{StaticResource FancyLabel}">Factory Soundset</Label>
            <Label Style="{StaticResource FancyLabel}">001: Sound Patch 1</Label>
        </StackPanel>
        <components:MatrixSection HorizontalAlignment="Center" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="5" Grid.RowSpan="3" Margin="0,10,0,0" />
    </Grid>
</UserControl>
